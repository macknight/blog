<!-- the reason to use short form is because @article is a resource courresponding to a full set of RESTful routes, and rails is able to infer which URI and method to use. -->
<!-- here use @article, use :article will have error, no routes in-->

<%= form_for @article do |f| %>
	<% if @article.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>
		<ul>
			<% @article.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
	<% end %>
	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :text %><br>
		<%= f.text_field :text %>
	</p>

	<p>
		<%= f.submit "提交" %>
	</p>
<% end %>